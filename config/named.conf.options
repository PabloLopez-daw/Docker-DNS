acl confiables {
    192.168.0.0/16;  // Tu red local t√≠pica
    172.16.0.0/12;   // Redes internas de Docker
    127.0.0.0/8;     // Localhost
};

options {
    directory "/var/cache/bind";

    listen-on { any; };
    listen-on-v6 { none; }; 

    allow-transfer { none; }; 
      
    recursion yes;           
    allow-recursion { confiables; }; 
 
    dnssec-validation yes;   
};